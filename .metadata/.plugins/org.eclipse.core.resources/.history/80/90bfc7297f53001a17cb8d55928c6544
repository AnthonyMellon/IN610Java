package psalary;

public class Salary {
	
	private double gross;
	
	public Salary(double gross)
	{
		
	}
	
	public double getGross()
	{
		return gross;
	}
	
	public void setGross(double gross)
	{
		this.gross = gross;
	}
	
	public double getTax()
	{
		double tax = 0;
		
		if(gross < 70000)
		{
			tax = (gross - 70000)*0.33;
		}
		
		else if(gross < 48000)
		{
			
		}
		
		else if(gross < 16000)
		{
			
		}
		
		else if(gross < 0)
		{
			
		}
		
		return tax;
	}
	
	public double getNet()
	{
		return gross - getTax();
	}
}
